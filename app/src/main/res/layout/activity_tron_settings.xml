<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tron_settings_title"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"/>

        <!-- Line Color Selection -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tron_line_color_label"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/line_color_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tron_select_color_button_text"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/line_color_display"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textStyle="bold"
                android:background="#CCCCCC"
                android:text="#RRGGBB" />
        </LinearLayout>

        <!-- Glow Radius Input -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tron_glow_radius_label"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/glow_radius_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/tron_glow_radius_hint"
            android:inputType="numberDecimal"
            android:maxLength="4"
            android:layout_marginBottom="16dp"/>

        <!-- Line Speed Input -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tron_line_speed_label"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/line_speed_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/tron_line_speed_hint"
            android:inputType="numberDecimal"
            android:maxLength="4"
            android:layout_marginBottom="16dp"/>

        <!-- Max Lines Input -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tron_max_lines_label"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/max_lines_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/tron_max_lines_hint"
            android:inputType="number"
            android:maxLength="3"
            android:layout_marginBottom="24dp"/>

        <Button
            android:id="@+id/save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tron_save_button_text"/>

    </LinearLayout>
</ScrollView>
